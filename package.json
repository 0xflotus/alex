{
  "name": "alex.com",
  "private": true,
  "version": "0.0.0",
  "description": "The alex.com website",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "dependencies": {},
  "scripts": {
    "lint": "xo && stylelint index.css",
    "build": "browserify index.js | uglifyjs > build.js",
    "prepublish": "npm run test",
    "test": "npm run lint && npm run build"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "debounce": "^1.0.0",
    "global": "^4.3.2",
    "retext-english": "^3.0.0",
    "retext-equality": "^3.0.0",
    "retext-profanities": "^4.1.0",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.0.0",
    "uglify-js": "^3.0.15",
    "unified": "^7.0.0",
    "vfile": "^3.0.0",
    "vfile-sort": "^2.0.0",
    "vfile-statistics": "^1.0.0",
    "virtual-dom": "^2.1.1",
    "xo": "^0.22.0"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "no-cond-assign": "off"
    },
    "ignore": [
      "build.js"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
